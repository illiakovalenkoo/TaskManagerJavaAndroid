<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/image"
    tools:context=".MainActivity"
    tools:ignore="VisualLintBounds">


    <EditText
        android:id="@+id/list_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:autofillHints="@string/list_name_field"
        android:backgroundTint="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="@string/list_name_field"
        android:inputType="text"
        android:padding="15dp"
        android:textColor="@color/black"
        tools:ignore="VisualLintTextFieldSize" />

    <TextView
        android:id="@+id/info_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name_field"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/info_app"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <ListView
        android:dividerHeight="2dp"
        android:divider="@color/color_primary"
        android:id="@+id/task_list"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_app" />
</RelativeLayout>